{
  "compilerOptions": {
    "target": "ES2021",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "rootDirs": ["src", "tests"],
    "baseUrl": "src",
    "paths": {
    "@/*" : ["*"],
    "@/tests/*" : ["../tests/*"]
    },
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": ["src", "tests"],
  "exclude": [
    "node_modules"
  ]
}